<div class="relative h-[95vh] w-full overflow-hidden">
    
    <Image 
        src={heroImage} 
        alt="Imagen de fondo de la campaña"
        class="absolute inset-0 h-full w-full object-cover"
        style="object-position: 78%;"
        quality="100"
    />
    
    <div class="absolute inset-0 bg-gradient-to-t from-azul-marino-oscuro to-70% lg:hidden"></div>

    <div class="absolute inset-0 container mx-auto flex items-end px-6 pb-12 md:items-center md:pb-0">
        <div class="max-w-xl">
            <h1 class="text-[38px] font-black uppercase italic leading-tight text-[#F39C12] md:text-5xl lg:text-[90px] font-montserrat">
                “Con Dios <br /> Todo, <br /> Sin Dios <br /> Nada”
            </h1>
            <p class="mt-4 text-[20px] font-semibold text-white md:text-[30px] font-open-sans"> 
                Gonzalo “Chacho” Diaz a la <br /> Reelección de Palo Negro
            </p>
        </div>
    </div>
</div>