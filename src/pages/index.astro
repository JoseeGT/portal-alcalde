---
import Layout from '../Layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Intro from '../components/Intro.astro';
import GestionGrid from '../components/GestionGrid.astro';
import SeccionAlcalde from '../components/SeccionAlcalde.astro';
import LogrosComunidad from '../components/LogrosComunidad.astro';
import FormularioOpinion from '../components/FormularioOpinion.astro';
import Slider from '../components/slider.astro';
import Reuniones from '../components/Reuniones.astro';
import Titulos from '../components/titulos.astro';
import VideoRecuerdo from '../components/VideoRecuerdo.astro';
import NotificacionMusicaTailwind from '../components/NotificacionMusica.astro';
import VideoCaminata from '../components/VideoCaminata.astro';
import todosLosProyectos from '../data/proyectos.json';

const comunidadesUnicas = new Map(
  todosLosProyectos.map(p => [p.comunidad, { id: p.comunidad, nombre: p.nombreComunidad }])
);
const listaComunidades = Array.from(comunidadesUnicas.values());


import myImage from '../assets/imagen1.jpg';
---

<Layout title="Gonzalo “Chacho” Diaz"
    description="Conoce la gestión y logros de nuestro alcalde Gonzalo 'Chacho' Diaz para con nuestra comunidad."
    image="/preview-inicio.jpg">
  <NotificacionMusicaTailwind />
  <Hero/>

  <Intro image={myImage} />

  <GestionGrid />
  
  <Titulos />
  <VideoRecuerdo />
  <SeccionAlcalde/>
  <VideoCaminata/>
  <Slider />

  <LogrosComunidad listaComunidades={listaComunidades}/>
  
  <Reuniones />

  <FormularioOpinion />

</Layout>